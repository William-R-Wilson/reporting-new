

<div class = "sub_head">Purchases made by <%= @user.first_name + " " + @user.last_name%> from <%= @start_date.strftime("%b")+
                      " " + @start_date.day.to_s %> to <%= @end_date.strftime("%b") +
                      " " + @end_date.day.to_s %></div>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Vendor</th>
      <th>Who</th>
      <th>What</th>
      <th>Where</th>
      <th>Why</th>
      <th>Amount</th>
      <th>Program</th>
      <th>Account</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transactions_for_display.each do |transaction| %>
      <tr class = "<%= cycle('list_line_even', 'list_line_odd') %>">
        <td><%= transaction.date %></td>
        <td><%= transaction.vendor %></td>
        <td><%= transaction.who %></td>
        <td><%= transaction.what %></td>
        <td><%= transaction.where %></td>
        <td><%= transaction.why %></td>
        <td><%= number_to_currency(transaction.amount) %></td>
        <td><%= transaction.program.name %></td>
        <td><%= transaction.account.name %></td>
        <td class="noprint"><%= link_to 'Edit', edit_transaction_path(transaction), class: 'row_button' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class = "pagination"><span id="page">Page:</span><%= will_paginate @transactions_for_display %></div>
