<div><%= link_to "Enter Time", new_time_record_path, class: "nav_button", title: "Enter your hours worked" %></div>

  <table>
    <thead>
      <tr>
        <th><%= sortable "date", "Sort by Date" %></th>
        <th><%= sortable "user_id", "Sort by Name" %></th>
        <th>Hours worked</th>
        <th>Vacation Taken</th>
        <th>Sick Taken</th>
        <th>Holiday</th>
        <th>Bereavement</th>
        <th>Inclement Weather</th>
        <th>Jury Duty</th>
        <th>Total this Period</th>
      </tr>
    </thead>
    <tbody>
      <% @timerecords.each do |t| %>
      <tr>
        <td><%= t.date %></td>
        <td><%= t.user.last_name + "," + t.user.first_name %></td>
        <td><%= t.hours %></td>
        <td><%= t.vacation %></td>
        <td><%= t.sick %></td>
        <td><%= t.holiday %></td>
        <td><%= t.bereavement %></td>
        <td><%= t.inclement_weather %></td>
        <td><%= t.jury_duty %></td>
        <td><%= t.hours+t.sick+t.vacation+(t.holiday || 0)+(t.bereavement || 0)+(t.inclement_weather || 0)+(t.jury_duty || 0) %></td>
        <td><%= link_to 'Edit', edit_time_record_path(t), class: 'row_button' %></td>
        <td><%= link_to 'Delete', t, method: :delete, data: { confirm: 'Are you sure?' },
        class: 'row_button' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<div class = "paginate"><%= will_paginate @timerecords %></div>
