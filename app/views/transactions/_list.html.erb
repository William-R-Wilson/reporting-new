<div id = "list_container">
<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Vendor</th>
      <th>Who</th>
      <th>What</th>
      <th>Where</th>
      <th>Why</th>
      <th>Amount</th>
      <th>Program</th>
      <th>Account</th>
      <th>Purchased by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr class = "<%= cycle('list_line_odd', 'list_line_even') %>">
        <td><%= transaction.date %></td>
        <td><%= transaction.vendor %></td>
        <td><%= transaction.who %></td>
        <td><%= transaction.what %></td>
        <td><%= transaction.where %></td>
        <td><%= transaction.why %></td>
        <td><%= number_to_currency(transaction.amount) %></td>
        <td><%= transaction.program %></td>
        <td><%= transaction.account %></td>
        <td><%= transaction.user.name %></td>
        <td><%= link_to 'Edit', edit_transaction_path(transaction), class: 'row_button' %></td>
        <td><%= link_to 'Delete', transaction, method: :delete, data: { confirm: 'Are you sure?' }, class: 'row_button' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class = "paginate"><%= will_paginate @transactions %></div>
</div>
